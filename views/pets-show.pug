extends layout

block content
  .row
    .col-sm-4
      if pet.avatarUrl
        img.card-img-top(src=pet.avatarUrl + '-square.', alt='Pet image')
      else
        img.card-img-top(src=pet.picUrlSq, alt='Pet image')
    .col-sm-8
      h1=pet.name
      p=pet.species
      p Born on #{pet.birthday}
      p=pet.description
      .text-right
        a(href="/pets/" + pet.id + "/edit").btn-link Edit
      
